if test "x${HOST}" == 'x'
then
	HOST='i586-mingw32msvc'
fi



if test "x${TARGET}" == 'x'
then
	TARGET='i586-mingw32msvc'
fi
if test "x${BUILD}" == 'x'
then
	BUILD='i586-linux'
fi
if test "x${CC}" == 'x'
then
	CC="${HOST}-cc"
fi
if test "x${RANLIB}" == 'x'
then
	RANLIB="${HOST}-ranlib"
fi
if test "x${AR}" == 'x'
then
	AR="${HOST}-ar rc"
	AR_WITHOUT_RC="${HOST}-ar"
fi
if test "x${RC}" == 'x'
then
	RC="${HOST}-windres"
fi

if test "x${TOP_CROSS}" == 'x'
then
	TOP_CROSS=`pwd .`
fi

FAKE32="$TOP_CROSS/fakeroot-mingw32"
FAKE32_SRC="$FAKE32/src"

