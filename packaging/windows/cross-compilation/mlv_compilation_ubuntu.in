source definition_of_environement_variables

(
cd $FAKE32_SRC
cd @PACKAGE_TARNAME@-@PACKAGE_VERSION@

#
# L'option libxml_CFLAGS="-I$FAKE32/include/libxml2" libxml_LIBS="-lxml2"
# pour empecher ques les flags -lmingw32 et -lSDL_main soient positionner.
# en effet cela empeche la creation de .DLL
#
# L'option LIBS="-lasprintf" est la pour permettre le linkage pour les fonction asprintf.
#

if ! test -a ./Makefile;
then
	libxml_CFLAGS="-I$FAKE32/include/libxml2" libxml_LIBS="-lxml2" CPPFLAGS="-DWIN32 -I$FAKE32/include -I$FAKE32/include/glib-2.0 -I$FAKE32/lib/glib-2.0/include" LDFLAGS="-L$FAKE32/lib -L/usr/i586-mingw32msvc/lib" LIBS="-lasprintf" ./configure --prefix=$FAKE32 --host="$HOST" $DEBUG_OPTION --enable-relativepath='./data'
fi

make  RANLIB="$RANLIB" RC="$RC" AR="$AR" CC="$CC" prefix=$FAKE32 CPPFLAGS="-DWIN32 -I$FAKE32/include -I$FAKE32/include/glib-2.0 -I$FAKE32/lib/glib-2.0/include" LDFLAGS="-L$FAKE32/lib -L/usr/i586-mingw32msvc/lib"
make install 
)


