source definition_of_environement_variables

(
if ! test -a $FAKE32/bin/SDL_mixer.lib;
then
	print_red "Building the cross compilation infrastructure."
	./cross_compilation_ubuntu
fi
)

print_red "Preparation of the source of @PACKAGE_TARNAME@-@PACKAGE_VERSION@"
(
cd @abs_top_srcdir@ && make dist
)

(
cp -r @abs_top_srcdir@/@PACKAGE_TARNAME@-@PACKAGE_VERSION@.tar.gz $FAKE32_SRC
)

(
cd $FAKE32_SRC
rm -rf @PACKAGE_TARNAME@-@PACKAGE_VERSION@
tar -xzf @PACKAGE_TARNAME@-@PACKAGE_VERSION@.tar.gz
)

print_red "Compilation of @PACKAGE_TARNAME@-@PACKAGE_VERSION@"
./mlv_compilation_ubuntu

